@model IEnumerable<PruebaTecnicaWebMaster.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Producs</h1>

<p>
    <a type="button" class="btn btn-success" asp-action="Create" asp-controller="Products">Add Producs</a>
</p>
<table class="table content-table">
    <thead>
        <tr>
            <th>
                Product name
            </th>
            <th>
                Unit price
            </th>
            <th>
                Quantity
            </th>
            <th>
                State
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NameProducts)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Active)
                </td>
                <td>
                    <a type="button" class="btn btn-primary" asp-action="Edit" asp-route-id="@item.IdProducts">Edit</a> |
                    <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdProducts">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
