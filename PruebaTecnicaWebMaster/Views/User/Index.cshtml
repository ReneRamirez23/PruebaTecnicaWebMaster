@model IEnumerable<PruebaTecnicaWebMaster.Models.User>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>User</h1>

<p>
    <a type="button" class="btn btn-success" asp-action="Create" asp-controller="User">Add User</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Category
            </th>
            <th>
                Name
            </th>
            <th>
                Last name
            </th>
            <th>
                Mail
            </th>
            <th>
                Password
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TypeUser)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    <a type="button" class="btn btn-primary" asp-action="Edit" asp-route-id="@item.IdUser">Edit</a> |
                    <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdUser">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
